# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Power Options' -B 'Exit i3' 'i3-msg exit' -B 'Restart' 'reboot' -B 'Shutdown' 'poweroff'"

set $power_options Power Options: (u) Poweroff, (r) Reboot
bindsym $mod+Shift+x mode "$power_options"

mode "$power_options" {
    bindsym u exec poweroff
    bindsym r exec reboot

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+x mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Shift+h resize shrink width 5 px or 5 ppt
    bindsym Shift+j resize grow height 5 px or 5 ppt
    bindsym Shift+k resize shrink height 5 px or 5 ppt
    bindsym Shift+l resize grow width 5 px or 5 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

set $displays Toggle Displays: (1) eDP-1 only, (2) HDMI-1 only, (3) both
bindsym $mod+p mode "$displays"
mode "$displays" {
    bindsym 1 mode "default", exec --no-startup-id xrandr --output eDP-1 --mode 1920x1080 --pos 0x0 --rotate normal --primary --output HDMI-1 --off
    bindsym 2 mode "default", exec --no-startup-id xrandr --output eDP-1 --off --output HDMI-1 --primary --mode 1920x1080 --pos 1920x0
    bindsym 3 mode "default", exec --no-startup-id ~/.config/i3/monitor_pos.sh
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $mode_gaps Toggle gaps: (1) on (2) off
bindsym $mod+t mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set 15, gaps outer all set 0
    bindsym $mod+1 mode "default", gaps inner all set 15, gaps outer all set 0
    bindsym 2 mode "default", gaps inner all set 0, gaps outer all set 0
    bindsym $mod+2 mode "default", gaps inner all set 0, gaps outer all set 0
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+equal gaps outer current plus 5
bindsym $mod+minus gaps outer current minus 5
bindsym $mod+Shift+equal gaps inner current plus 5
bindsym $mod+Shift+minus gaps inner current minus 5

