# Font for window titles. Will also be used by the bar unless a different font
font pango:DejaVu Sans Mono 9

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use playerctl to enable multimedia keys for MPRIS compatible software
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Use brightnessctl to control screen brightness on laptop
# TODO fix sudo issue
bindsym XF86MonBrightnessDown exec --no-startup-id sudo brightnessctl set 150-
bindsym XF86MonBrightnessUp exec --no-startup-id sudo brightnessctl set +150

# ======COLORS============================================
set $color_primary #F0544C
set $color_background #333333
set $color_backgroundAlt #222222
set $color_background2 #681919
set $color_background3 #5e2e2e
set $color_foreground #DADADA
set $color_foregroundAlt #FFFFFF
set $color_indicator #666666
set $color_indicatorAlt #444444
set $color_urgent #8d0000


# <colorclass>          <border>             <background>      <text>               <indicator>         <child_border>
client.focused          $color_primary       $color_background $color_foreground    $color_indicator    $color_primary
client.focused_inactive $color_backgroundAlt $color_background $color_foreground    $color_indicatorAlt $color_background
client.unfocused        $color_background    $color_background $color_foreground    $color_indicator    $color_backgroundAlt
client.urgent           $color_background    $color_urgent     $color_foregroundAlt $color_urgent       $color_urgent
client.placeholder      #000000              #0c0c0c           #ffffff              #000000             #0c0c0c

client.background       $color_background


# #---Basic Definitions---# #
set $mod Mod4
for_window [class="^.*"] border pixel 2
set $term --no-startup-id $TERMINAL
gaps inner 0
gaps outer 0

bar {
	font pango:mono 10
	status_command i3blocks
	position bottom
	mode dock
	modifier none
	#i3bar_command i3bar --transparency #282828
    tray_output primary
	colors {
		background $color_background3
		separator #ebdbb2
		#<colorclass> <border> <background> <text>
		focused_workspace  $color_primary $color_primary $color_foreground 
		inactive_workspace $color_background2 $color_background2 #aaaaaa
		urgent_workspace   #cc241d #900000 #ffffff
	}
}

