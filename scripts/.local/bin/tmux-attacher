#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(tmux list-sessions | cut -f1 -d":" | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected
    exit 0
fi

tmux switch-client -t $selected
